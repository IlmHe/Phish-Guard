{
  "manifest_version": 2,
  "name": "Phish-Guard",
  "version": "1.0",
  "description": "A browser extension to guard against phishing.",
  "permissions": ["activeTab", "webNavigation", "storage", "contextMenus"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "settings.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "phish-guard@yourdomain.com",
      "strict_min_version": "57.0"
    }
  }
}
